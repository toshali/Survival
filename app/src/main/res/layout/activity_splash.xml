<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURVIVAL"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff2c29"
        android:textSize="80sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="152dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toshali Randev, Maggie OToole, Amanual"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#fffff6f7"
        android:textSize="20sp"
        android:typeface="monospace"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CS 2110"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffd6ff8c"
        android:textSize="20sp"
        android:typeface="monospace"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEGIN GAME"
        android:id="@+id/start_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:textColor="#ffff2012" />
</RelativeLayout>